<!DOCTYPE html>
<html lang="pt-br">
  <%- include('./partials/head')%>
  <body>
    <%- include('./partials/navbar') %>

    <div class="container">
      <form method="post" action="/pessoaCadastrada">
        <div class="card">
          <div class="card-body">
            <div class="card-footer">
              <h2>formulário</h2>
            </div>
            <div class="form-body">
              <div class="row">
                <div class="col">
                  <label for="Inome">Nome *</label>
                  <input type="text" class="form-control" name="Inome" />
                </div>

                <div class="col">
                  <label for="Isobrenome">Sobrenome</label>
                  <input type="text" class="form-control" name="Isobrenome" />
                </div>
              </div>

              <label for="Idata">Data de Nascimento</label>
              <input type="date" id="Idata" class="form-control" name="Idata" />

              <label for="Iemail" class="form-label">Email *</label>
              <input
                type="email"
                class="form-control"
                id="Iemail"
                name="Iemail"
              />

              <label for="Iphone">Telefone</label>
              <input
                type="text"
                class="form-control"
                data-mask="(00)00000-0000"
                data-mask-selectonfocus="true"
                name="Iphone"
              />

              <label for="IdataList">Estado</label>
              <input
                class="form-control"
                list="dataListOptions"
                id="exampleDataList"
                placeholder="Estado"
                name="Istate"
              />
              <datalist id="dataListOptions">
                <option value="São Paulo">Paulista</option>
                <option value="Rio de Janeiro">Carioca</option>
                <option value="Bahia">Baiano</option>
                <option value="Espirito Santo">Capixaba</option>
              </datalist>

              <label for="">Username *</label>
              <input type="text" class="form-control" name="Iusername" />
              <label for="Ipassword" class="form-label">Senha *</label>
              <input
                type="password"
                id="Ipassword"
                class="form-control"
                name="Ipassword"
              />
              <div id="passwordHelp" class="form-text">
                Your password must be 8-20 characters long, contain letter and
                numbers, and must not contains spaces, special characters, or
                emoji.
              </div>
              <div class="form-check">
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="Check1"
                  onchange="mostrarSenha(this)"
                />
                <label for="Check1" class="form-check-label"
                  >Check me out</label
                >
              </div>
              <button type="submit" class="btn btn-outline-primary">
                Cadastrar
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>

    <script type="text/javascript">
      //add mascara no campo de telefone
      $(document).ready(function () {
        $('#Iphone').mask('(00) 0000-0000')
      })
    </script>
  </body>

  <%- include('./partials/footer') %>
</html>
